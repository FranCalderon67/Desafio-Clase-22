<html lang="es">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stickers Signup</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../style.css" />

  </head>

  <body class="login-background">
    <div class="container mt-3">
      <div>
        <br />
        <div class="login-form-background login-form-flex">
          <h1>REGISTRATE</h1>
          <form class="login-form-flex-inputs" action="/signup" method="post" autocomplete="off">

            <input id="nombreRegistro" type="email" name="email" placeholder="Email" required />
            <input id="passwordRegistro" type="password" name="password" placeholder="Password" required />

            <button class="btn-login">ENVIAR</button>

          </form>
          <a href="/"> <button class="btn-regresar">REGRESAR</button></a>
        </div>
      </div>
    </div>
    <script src="../main.js"></script>
  </body>
</html>